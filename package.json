{
  "name": "heatmap-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --filter '*' dev",
    "build": "bun --filter '*' build",
    "dev:web": "bun --filter @heatmap/web dev",
    "dev:api": "bun --filter @heatmap/api dev",
    "build:web": "bun --filter @heatmap/web build",
    "build:api": "bun --filter @heatmap/api build"
  },
  "devDependencies": {
    "typescript": "~5.9.3",
    "prettier": "3.6.2"
  }
}
